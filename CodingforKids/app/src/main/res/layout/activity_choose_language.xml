<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="@drawable/back5"
    tools:context=".child.ChooseLanguageActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@id/imgLogo">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/chelmsfordfree"
            android:text="@string/choose_language"
            android:textStyle="bold"
            android:textColor="@color/pink"
            android:textSize="35dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHTML"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="60dp"
                android:layout_marginHorizontal="60dp"
                android:text="@string/learn_html"
                android:fontFamily="@font/mechanical"
                android:textColor="@color/white"

                android:textStyle="bold"
                android:textSize="22dp"
                android:drawableLeft="@drawable/html"
                android:background="@drawable/round_button"
                />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJava"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:text="@string/learn_java"
            android:fontFamily="@font/mechanical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:drawableLeft="@drawable/java"
            android:background="@drawable/round_button2"
            />

    </LinearLayout>

</RelativeLayout>