<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Background color (remaining part) -->
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="4dp" />
        <solid android:color="#D3D3D3"/> <!-- Grey color for background -->
    </shape>
</item>
<!-- Progress color (completed part) -->
<item android:id="@android:id/progress">
    <clip>
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#76C7C0"/> <!-- Blue-green color for progress -->
        </shape>
    </clip>
</item>
</layer-list>
